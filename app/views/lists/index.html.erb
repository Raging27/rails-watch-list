<div class="container">
  <img src="https://img.freepik.com/premium-vector/cinema-festival-social-media-cover-template_23-2149939383.jpg?w=1800" alt="Banner" class="img-fluid mb-4">
  <h1 class="my-4 text-center display-4">All Movie Lists</h1>

  <%= link_to 'Create New List', new_list_path, class: 'btn btn-primary mb-3 d-block mx-auto' %>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-3">
        <div class="card h-100">
          <%= image_tag("https://picsum.photos/300/200?random=#{rand(1..100)}", class: "card-img-top") %> <%# Random Image  %>
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
          </div>
          <div class="card-footer">
            <%= link_to 'Show List', list_path(list), class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'View Bookmarks', root_path(@list), class: 'btn btn-secondary mt-2 d-block mx-auto' %>
</div>
