<h1><%= @list.name %></h1>

<%= link_to 'Add Movie to List', new_list_bookmark_path(@list), class: 'btn btn-primary' %>

<h2>Movies in this List</h2>
<div class="row">  <% @list.bookmarks.each do |bookmark| %>
    <div class="col-md-4">
      <div class="card mb-3">
        <%= image_tag(bookmark.movie.poster_url, class: "card-img-top") %>
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'Back to Lists', lists_path, class: 'btn btn-link' %>
