<h1>Add a Movie to <%= @list.name %></h1>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.association :movie, collection: @movies, prompt: "Select a movie" %>
  <%= f.input :comment, as: :text, label: "Your comment about the movie" %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to List', list_path(@list), class: 'btn btn-link' %>
