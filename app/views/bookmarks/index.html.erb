<div class="container">
  <h1 class="my-4 text-center">Bookmarks</h1>
  <p class="text-muted">Here you have a tab of all bookmarks!</p>

  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="bookmarks-tab" data-bs-toggle="tab" data-bs-target="#bookmarks" type="button" role="tab" aria-controls="bookmarks" aria-selected="true">Bookmarks</button>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="bookmarks" role="tabpanel" aria-labelledby="bookmarks-tab">
      <h2 class="my-3">Bookmarks</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Movie</th>
            <th scope="col">List</th>
            <th scope="col">Comment</th>
          </tr>
        </thead>
        <tbody>
           <% @bookmarks.each do |bookmark| %>
            <tr>
              <td><%= bookmark.movie.title %></td>
              <td><%= bookmark.list.name %></td>
              <td><%= bookmark.comment %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'See your movie lists', lists_path, class: 'btn btn-primary mt-3' %>
    </div>
  </div>
</div>
